---
import "@/styles/global.css";
import "@fontsource/source-sans-pro/400.css";
import "@fontsource/source-sans-pro/600.css";
import "@fontsource/source-sans-pro/700.css";
import "@fontsource-variable/source-serif-4";
import { ClientRouter } from "astro:transitions";
import { SITE } from "@/lib/config";
import type { ArticleMeta, Meta } from "@/lib/types";

type Props = {
  meta: Meta | ArticleMeta;
};

const { meta } = Astro.props;

// Type guard to check if props is ArticleMeta
const isArticleMeta = (props: Props["meta"]): props is ArticleMeta =>
  props.type === "article";
const canonicalURL = new URL(Astro.url.pathname, Astro.site).href;

const OGImage = new URL(meta.ogImage, Astro.url).href;
---

<head>
  <!-- DNS Prefetch and Preconnect -->
  <link rel="dns-prefetch" href="//opt.mieru-ca.com">
  <link rel="preconnect" href="https://opt.mieru-ca.com" crossorigin>
  <link rel="dns-prefetch" href="//www.googletagmanager.com">
  <link rel="preconnect" href="https://www.googletagmanager.com" crossorigin>
  <link rel="dns-prefetch" href="//hm.mieru-ca.com">
  <link rel="preconnect" href="https://hm.mieru-ca.com" crossorigin>

  <!-- Google Tag Manager (Optimized) -->
  <script>
  // GTM optimized for performance
  window.dataLayer = window.dataLayer || [];
  window.addEventListener('load', function() {
    setTimeout(function() {
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','GTM-NFDHSBNS');
    }, 1000);
  });
  </script>
  <!-- End Google Tag Manager -->

  <!-- Global Metadata -->
  <meta charset={SITE.charset} />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <meta name="generator" content={Astro.generator} />

  <!-- Critical CSS Inline -->
  <style>
    html{font-size:16px;height:100%}
    @media(min-width:1024px){html{font-size:17px}}
    body{font-family:"Source Sans Pro",ui-sans-serif,system-ui,sans-serif;-webkit-font-smoothing:antialiased;height:100%;cursor:default}
    h1,h2{font-family:"Source Serif 4 Variable",ui-serif,Georgia,Cambria,"Times New Roman",Times,serif}
    .container{max-width:1280px;margin:0 auto;padding:0 1rem}
    @media(min-width:640px){.container{padding:0 1.5rem}}
    @media(min-width:1024px){.container{padding:0 2rem}}
  </style>

  <!-- Favicons -->
  <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="shortcut icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <meta name="apple-mobile-web-app-title" content="みやびと" />
  <link rel="manifest" href="/site.webmanifest" />

  <!-- RSS & Sitemap -->
  <link rel="sitemap" href="/sitemap-index.xml" />
  <link
    rel="alternate"
    type="application/rss+xml"
    title={SITE.title}
    href={new URL("rss.xml", Astro.site)}
  />

  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalURL} />

  <!-- Page Metadata -->
  <title>{meta.title}</title>
  <meta name="title" content={meta.metaTitle} />
  <meta name="description" content={meta.description} />
  
  <!-- Google Search Console Verification -->
  <meta name="google-site-verification" content="k2spCZy2GTps2dUvSxv_lvzA61kD3ekpBPfnnEDp_is" />

  <!-- Mieruca Scripts (Deferred) -->
  <script type="text/javascript">
  // Defer Mieruca scripts until after page load
  window.addEventListener('load', function() {
    setTimeout(function() {
      // Mieruca Embed Code
      window.__fid = window.__fid || [];__fid.push([162310428]);
      var fjs = document.createElement('script'); 
      fjs.type = 'text/javascript'; 
      fjs.async = true; 
      fjs.src = 'https://hm.mieru-ca.com/service/js/mieruca-hm.js?v=' + new Date().getTime(); 
      document.head.appendChild(fjs);
      
      // Mieruca Optimize
      window.__optimizeid = window.__optimizeid || [];__optimizeid.push([1301426804]);
      var ojs = document.createElement('script');
      ojs.type = 'text/javascript';
      ojs.async = true;
      ojs.src = 'https://opt.mieru-ca.com/service/js/mieruca-optimize.js?v=' + new Date().getTime();
      document.head.appendChild(ojs);
    }, 2000);
  });
  </script>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content={meta.type} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={Astro.url.pathname === '/' ? SITE.ogTitle : meta.metaTitle} />
  <meta property="og:description" content={meta.description} />
  <meta property="og:image" content={OGImage} />
  <meta property="og:image:alt" content={meta.ogImageAlt} />

  <!-- Twitter -->
  <meta property="twitter:site" content={Astro.site} />
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={canonicalURL} />
  <meta property="twitter:title" content={Astro.url.pathname === '/' ? SITE.ogTitle : meta.metaTitle} />
  <meta property="twitter:description" content={meta.description} />
  <meta property="twitter:image" content={OGImage} />
  <meta property="twitter:image:alt" content={meta.ogImageAlt} />

  {
    isArticleMeta(meta) ? (
      <>
        <meta
          property="article:published_time"
          content={new Date(meta.publishedTime).toISOString()}
        />
        <meta
          property="article:modified_time"
          content={new Date(meta.lastModified).toISOString()}
        />

        {meta.authors.map((author) => (
          <>
            <meta property="author" content={author.name} />
            <meta
              property="article:author"
              content={`${Astro.site}authors/${author.link}`}
            />
          </>
        ))}
      </>
    ) : null
  }

  <!-- FAQ Structured Data (HomePage only) -->
  {Astro.url.pathname === '/' && (
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "みやびとはどんなメディアですか？",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "宮崎で輝く人々の物語を伝えるストーリーメディアです。フリーランスや起業家など、新しい働き方や挑戦のリアルな姿を記録し、次の誰かの人生の道しるべになることを目指しています。"
          }
        },
        {
          "@type": "Question",
          "name": "どんな人たちが紹介されていますか？",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "宮崎で活躍するフリーランス、起業家、小さな会社の経営者、副業・複業を行う人、新しい働き方を実践する人など、多様な生き方をしている方々を取材しています。"
          }
        },
        {
          "@type": "Question",
          "name": "取材や掲載をお願いしたい場合はどうすればいいですか？",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "公式サイトのお問い合わせフォームからご連絡ください。宮崎で挑戦する方、新しい働き方を実践している方、地域の未来をつくる活動をしている方を広く募集しています。"
          }
        }
      ]
    })} />
  )}

  <ClientRouter />
</head>
