---
interface BreadcrumbItem {
  name: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav aria-label="パンくずリスト" class="mb-4">
  <ol class="flex items-center gap-2 text-xs text-base-content/60" itemscope itemtype="https://schema.org/BreadcrumbList">
    {items.map((item, index) => (
      <li class="flex items-center gap-2" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
        {item.href ? (
          <a 
            href={item.href} 
            class="hover:text-base-content/80 transition-colors"
            itemprop="item"
          >
            <span itemprop="name">{item.name}</span>
          </a>
        ) : (
          <span class="text-base-content/80" itemprop="name">{item.name}</span>
        )}
        <meta itemprop="position" content={String(index + 1)} />
        
        {index < items.length - 1 && (
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" class="text-base-content/50">
            <polyline points="9 18 15 12 9 6"/>
          </svg>
        )}
      </li>
    ))}
  </ol>
</nav>