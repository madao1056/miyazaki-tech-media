---
// バナー設定（最小1枚、最大4枚）
// 各バナーのlink, image, altを設定してください
// link: クリック時の遷移先URL（現在は "#" で無効化）
// image: バナー画像のパス（画像を使用する場合はHTMLのコメントを解除）
// alt: 画像の代替テキスト
const banners = [
  {
    id: 1,
    image: "/images/banners/banner-1.jpg",
    alt: "広告募集中",
    link: "#", // TODO: 広告主のURLに変更してください
  },
  {
    id: 2,
    image: "/images/banners/banner-2.jpg",
    alt: "広告募集中",
    link: "#", // TODO: 広告主のURLに変更してください
  },
  {
    id: 3,
    image: "/images/banners/banner-3.jpg",
    alt: "広告募集中",
    link: "#", // TODO: 広告主のURLに変更してください
  },
  {
    id: 4,
    image: "/images/banners/banner-4.jpg",
    alt: "広告募集中",
    link: "#", // TODO: 広告主のURLに変更してください
  },
];

// 常に4列グリッドで表示（バナー数に関わらず）
const gridClass = "grid-cols-1 md:grid-cols-2 lg:grid-cols-4";
---

{false && banners.length > 0 && (
  <section class="bg-base-200 border-t border-base-300">
    <div class="container max-w-7xl mx-auto px-4 py-8">
      <div class={`grid ${gridClass} gap-4 justify-items-center`}>
        {banners.map((banner) => (
          <a
            href={banner.link}
            target="_blank"
            rel="noopener noreferrer"
            class="block bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-sm hover:shadow-lg transition-shadow group w-full max-w-sm"
          >
            <div class="aspect-[16/9] bg-base-300 flex items-center justify-center overflow-hidden">
              <div class="w-full h-full flex items-center justify-center text-base-content/50">
                <div class="text-center p-4">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="48" height="48" fill="none" stroke="currentColor" stroke-width="2" class="mx-auto mb-2">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                    <circle cx="8.5" cy="8.5" r="1.5"/>
                    <polyline points="21 15 16 10 5 21"/>
                  </svg>
                  <p class="text-lg font-bold">広告募集中</p>
                </div>
              </div>
              <!-- 実際の画像を使用する場合は以下をコメント解除 -->
              <!-- <img
                src={banner.image}
                alt={banner.alt}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              /> -->
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
)}