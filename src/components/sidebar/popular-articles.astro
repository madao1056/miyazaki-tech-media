---
import { Image } from "astro:assets";
import { articlesHandler } from "@/lib/handlers/articles";
import { formatDate, normalizeDate } from "@/lib/utils/date";

const popularArticles = await articlesHandler.getTopArticles();
const topThree = popularArticles.slice(0, 3);
---

<div class="bg-white dark:bg-gray-800 rounded-lg p-4 shadow-sm">
  <h3 class="text-lg font-bold mb-4 flex items-center gap-2">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
    </svg>
    人気の記事
  </h3>
  <div class="flex flex-col gap-4">
    {topThree.map((article, index) => (
      <a
        href={`/articles/${article.id}`}
        class="group block bg-base-100 rounded-lg overflow-hidden border border-base-300/50 hover:border-primary/30 hover:shadow-lg transition-all relative"
      >
        <div class="absolute top-0 left-0 w-0 h-0 border-l-[32px] border-t-[32px] border-primary border-b-[0px] border-r-[0px] border-b-transparent border-r-transparent z-20">
          <span class="absolute -top-7 -left-7 text-white text-xs font-bold w-6 h-6 flex items-center justify-center z-20">
            {index + 1}
          </span>
        </div>
        <div class="aspect-[16/9] overflow-hidden">
          <Image
            src={article.data.cover}
            alt={article.data.cover_alt || article.data.title}
            width={400}
            height={300}
            format="webp"
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
          />
        </div>
        <div class="p-3">
          <h4 class="text-sm font-semibold line-clamp-2 group-hover:text-primary transition-colors mb-2">
            {article.data.title}
          </h4>
          <time class="text-xs text-base-content/60" datetime={normalizeDate(article.data.publishedTime)}>
            {formatDate(normalizeDate(article.data.publishedTime), "short")}
          </time>
        </div>
      </a>
    ))}
  </div>
</div>