---
import { Image } from "astro:assets";
import { getDateDistance, normalizeDate } from "@/lib/utils/date";
import { getImageAlt, getArticleUrl } from "@/lib/utils/card";
import Divider from "@/components/bases/divider.astro";
import type { CardPropsWithFlags } from "@/lib/types";

type Props = CardPropsWithFlags & {
  isLast: boolean;
};

const { article, isLast } = Astro.props;
const imageAlt = getImageAlt(article);
const articleUrl = getArticleUrl(article.id);
const publishDate = normalizeDate(article.data.publishedTime);
---

<li
  class="group w-full max-w-md mx-auto lg:max-w-full relative isolate flex flex-col lg:flex-row gap-4 cursor-pointer"
>
  <div
    class="flex-shrink-0 aspect-square w-32 text-sm text-base-content/60 text-pretty capitalize hidden lg:flex pt-1"
  >
    {getDateDistance(publishDate)}
  </div>
  <div
    class:list={[
      "flex-1 flex flex-col gap-4 lg:flex-row-reverse pb-2 lg:pb-4",
      isLast ? "border-b-0" : "border-b border-base-300",
    ]}
  >
    <div class="w-full lg:w-60 aspect-video">
      <Image
        src={article.data.cover}
        alt={imageAlt}
        layout="constrained"
        loading="eager"
        class="aspect-video rounded w-full h-full"
      />
    </div>
    <div class="flex-1 space-y-2">
      <h3 class="text-xl font-semibold lg:group-hover:underline">
        <a href={articleUrl}>
          <span class="absolute inset-0 z-10"></span>
          {article.data.title}
        </a>
      </h3>
      <p class="text-base-content/80 max-w-xl text-pretty">
        {article.data.description}
      </p>
    </div>
    <div class="text-sm lg:hidden flex item-center text-base-content/70 pt-2">
      <time class="flex items-center gap-1" datetime={publishDate}>
        <span>{getDateDistance(publishDate)}</span>
      </time>
      <Divider />
      <small class="flex items-center gap-1">
        <span class="capitalize text-sm">
          {article.data.category.id}
        </span>
      </small>
    </div>
  </div>
</li>
