---
import { SITE } from "@/lib/config";
import Head from "@/components/bases/head.astro";
import Header from "@/components/shared/header.astro";
import Footer from "@/components/shared/footer.astro";
import BannerSection from "@/components/shared/banner-section.astro";
import type { Entry } from "@/lib/types";
import { getMeta } from "@/lib/utils/getMeta";
import { FEATURES } from "@/lib/config/features";

type Props = {
  entry: Entry;
};

const { entry } = Astro.props;

const meta = await getMeta(entry);
---

<!doctype html>
<html lang={SITE.locale} dir={SITE.dir}>
  <Head meta={meta} />
  <body class="flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <BannerSection />
    <Footer />
  </body>
</html>

{FEATURES.AUTH && (
  <script>
    // セッション復元スクリプト
    const restoreSession = async () => {
      try {
        const { supabase } = await import('@/lib/auth/supabase');
        // ページ読み込み時にセッションを復元
        const { data: { session } } = await supabase.auth.getSession();
        if (session) {
          console.log('Session restored');
        }
      } catch (error) {
        console.error('Session restore error:', error);
      }
    };
    
    // できるだけ早くセッションを復元
    restoreSession();
  </script>
)}
