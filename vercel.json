{
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "media-site.vercel.app"
        }
      ],
      "destination": "https://tech.bond-llc.jp/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "media-site-*.vercel.app"
        }
      ],
      "destination": "https://tech.bond-llc.jp/:path*",
      "permanent": true
    }
  ]
}